@model MyPortfolio.ViewModels.PortfolioDetailsViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="myp-container flex" id="profile">
        <img class="profile-img" id="profile-pic" src="~/images/eris-leci-photo.jpg" alt="" width="300" height="300" />
    <div id="greeting-container">
        <p>Hi everyone, my name is</p>
        <h1 id="name">Eris Leci</h1>
        <p>and I'm a Software Engineer. If there is anything I can help, please contact me <a href = "mailto: lecieris@hotmail.com">here</a>
    </div>
</div>

<div class="myp-container" id="skills">
    <h2>Skills</h2>
    <table class="table">
        <tbody>
            @for (var i = 0; i < Model.Skills.Count; i = i + 4)
            {
                <tr>
                @for (var j = 0; j < 4 && i + j < Model.Skills.Count; j++)
                {
                    var skill = Model.Skills[i + j];
                    
                    <td class="label-td">
                        <span>@skill.Name</span>
                    </td>
                    <td>
                        <img class="rounded-img" src=@skill.Icon alt="" width="50" height="50" />
                    </td>
                }
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="myp-container" id="socials">
    <h2>Socials</h2>
    <table class="table">
        <tbody>
            @foreach (var social in Model.Socials)
            {
                <tr>
                    <td class="label-td">
                        @social.Name
                    </td>
                    <td>
                        <a href=@social.URL><img class="rounded-img" src=@social.Icon alt="" width="50" height="50" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>